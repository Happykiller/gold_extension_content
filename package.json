{
  "name": "gold_extension_content",
  "version": "0.3.0",
  "private": true,
  "dependencies": {
    "@types/chrome": "^0.0.243",
    "@types/jquery": "^3.5.16",
    "@types/node": "^16.18.39",
    "@types/react-dom": "^18.2.7",
    "dayjs": "^1.11.10",
    "i18next": "^23.4.4",
    "i18next-browser-languagedetector": "^7.1.0",
    "jquery": "^3.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.0.3",
    "styled-components": "^6.1.8",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@babel/plugin-transform-private-property-in-object": "^7.22.11",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/react": "^18.2.55",
    "jest-mock-extended": "^3.0.5",
    "npm-watch": "^0.11.0",
    "react-scripts": "5.0.1",
    "ts-jest": "^29.1.1"
  },
  "scripts": {
    "start": "set REACT_APP_MODE=browser & react-scripts start",
    "build": "react-scripts build",
    "test": "set REACT_APP_MODE=test & react-scripts test",
    "jest": "set REACT_APP_MODE=jest & jest --config=jest.config.js --collectCoverage --no-cache",
    "jest:watch": "set REACT_APP_MODE=jest & jest --config=jest.config.js --collectCoverage --watch --no-cache",
    "eject": "react-scripts eject",
    "watch:build": "npm-watch build"
  },
  "jest": {
    "testMatch": [
      "**/*.test.tsx"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "watch": {
    "build": {
      "patterns": [
        "."
      ],
      "ignore": "build",
      "extensions": "*",
      "quiet": false
    }
  }
}
